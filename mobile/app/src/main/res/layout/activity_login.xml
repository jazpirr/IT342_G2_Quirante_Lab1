<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_login"
    tools:context=".LoginActivity">

    <!-- Animated background blobs with different sizes -->
    <View
        android:id="@+id/blobTop"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:background="@drawable/shape_blob"
        android:alpha="0.18"
        android:translationX="-100dp"
        android:translationY="-120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/blobBottom"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:background="@drawable/shape_blob_alt"
        android:alpha="0.15"
        android:translationX="90dp"
        android:translationY="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Additional floating element -->
    <View
        android:id="@+id/blobMiddle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/shape_blob_small"
        android:alpha="0.12"
        android:translationX="40dp"
        android:translationY="-40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Main content container with elevated design -->
    <androidx.cardview.widget.CardView
        android:id="@+id/loginCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:elevation="12dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/surface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="36dp">

            <!-- Animated accent bar -->
            <View
                android:id="@+id/accentBar"
                android:layout_width="60dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:background="@drawable/accent_bar"
                android:layout_marginBottom="24dp" />

            <!-- Logo/Icon with pulse effect -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp">

                <!-- Glow effect behind logo -->
                <View
                    android:id="@+id/logoGlow"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/logo_glow"
                    android:alpha="0.3" />

                <ImageView
                    android:id="@+id/logoIcon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_leaf_logo"
                    android:contentDescription="@string/app_logo"
                    android:tint="@color/primary" />
            </FrameLayout>

            <!-- Welcome text with gradient effect -->
            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/welcome_back"
                android:textSize="36sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.01"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/login_subtitle"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="sans-serif-light"
                android:layout_marginBottom="36dp" />

            <!-- Email input with enhanced design -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                app:boxStrokeColor="@color/primary"
                app:hintTextColor="@color/primary"
                app:boxCornerRadiusTopStart="18dp"
                app:boxCornerRadiusTopEnd="18dp"
                app:boxCornerRadiusBottomStart="18dp"
                app:boxCornerRadiusBottomEnd="18dp"
                app:startIconDrawable="@drawable/ic_email"
                app:startIconTint="@color/primary"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="3dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/text_primary"
                    android:textSize="17sp"
                    android:padding="18dp"
                    android:fontFamily="sans-serif-medium" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password input with enhanced design -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxStrokeColor="@color/primary"
                app:hintTextColor="@color/primary"
                app:boxCornerRadiusTopStart="18dp"
                app:boxCornerRadiusTopEnd="18dp"
                app:boxCornerRadiusBottomStart="18dp"
                app:boxCornerRadiusBottomEnd="18dp"
                app:startIconDrawable="@drawable/ic_lock"
                app:startIconTint="@color/primary"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/primary"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="3dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:textColor="@color/text_primary"
                    android:textSize="17sp"
                    android:padding="18dp"
                    android:fontFamily="sans-serif-medium" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Forgot password with icon -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="28dp">

                <TextView
                    android:id="@+id/forgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forgot_password"
                    android:textColor="@color/primary"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless" />
            </LinearLayout>

            <!-- Login button with gradient background -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@string/login"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.05"
                app:cornerRadius="18dp"
                app:backgroundTint="@null"
                android:background="@drawable/button_gradient"
                android:elevation="6dp"
                android:stateListAnimator="@null"

                app:iconGravity="end"
                app:iconTint="@color/white"
                android:layout_marginBottom="32dp" />

            <!-- Register prompt with modern design -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_register_prompt"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dont_have_account"
                    android:textColor="@color/text_secondary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/registerLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register"
                    android:textColor="@color/primary"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-black"
                    android:paddingStart="6dp"
                    android:paddingEnd="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Decorative floating particles -->
    <View
        android:id="@+id/particle1"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/particle"
        android:alpha="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp" />

    <View
        android:id="@+id/particle2"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:background="@drawable/particle"
        android:alpha="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="200dp" />

    <View
        android:id="@+id/particle3"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/particle"
        android:alpha="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="150dp" />

    <!-- Loading overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_dark"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <ProgressBar
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:indeterminateTint="@color/celadon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logging_in"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>